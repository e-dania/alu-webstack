#!/usr/bin/env bash
# Script to display information about subdomains

print_domain_record () {
    if [ "$2" = "www" ]; then
        echo "Your subdomain $2 points to your lb-01 server IP"
        echo "35.175.188.28"
    elif [ "$2" = "lb-01" ]; then
        echo "Your subdomain $2 points to your lb-01 server IP"
        echo "35.175.188.28"
    elif [ "$2" = "web-01" ]; then
        echo "Your subdomain $2 points to your web-01 server IP"
        echo "3.80.65.97"
    elif [ "$2" = "web-02" ]; then
        echo "Your subdomain $2 points to your web-02 server IP"
        echo "34.239.247.243"
    else
        echo "Unknown subdomain"
    fi
}

if [ "$#" -eq 1 ]; then
    domain=$1
    for sub in "www" "lb-01" "web-01" "web-02"; do
        print_domain_record "$domain" "$sub"
    done
elif [ "$#" -eq 2 ]; then
    domain=$1
    subdomain=$2
    print_domain_record "$domain" "$subdomain"
fi
