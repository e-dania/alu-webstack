#!/usr/bin/env bash
# Script to display information about subdomains

print_domain_record () {
    ip=$(dig +short "$2.$1")
    if [ -n "$ip" ]; then
        echo "The subdomain $2 is a A record and points to $ip"
    else
        echo "Unknown subdomain"
    fi
}

if [ "$#" -eq 1 ]; then
    domain=$1
    for sub in "www" "lb-01" "web-01" "web-02"; do
        print_domain_record "$domain" "$sub"
    done
elif [ "$#" -eq 2 ]; then
    domain=$1
    subdomain=$2
    print_domain_record "$domain" "$subdomain"
fi
